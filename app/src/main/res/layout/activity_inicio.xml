<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aspire.tiquets.Inicio">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buen Plan"
        android:textAlignment="center"
        android:textSize="36sp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp" />

    <EditText
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:hint="Usuario"
        android:id="@+id/editText_user"
        android:layout_above="@+id/editText_pass"
        android:layout_alignStart="@+id/editText_pass"
        android:layout_marginBottom="35dp" />

    <EditText
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:id="@+id/editText_pass"
        android:layout_above="@+id/buttonRegistrar"
        android:layout_alignEnd="@+id/buttonFacabook"
        android:layout_marginBottom="37dp" />


    <Button
        android:id="@+id/buttonFacabook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar con Facebook"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Registrate"
        android:layout_marginEnd="65dp"
        android:layout_alignBaseline="@+id/buttonIniciar"
        android:layout_alignBottom="@+id/buttonIniciar"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/buttonIniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Iniciar Sesión"
        android:layout_marginBottom="181dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/buttonRegistrar"
        android:layout_marginEnd="36dp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/botonGoogleIngreso"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/buttonRegistrar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"></com.google.android.gms.common.SignInButton>




</RelativeLayout>